---
import Base from "../layouts/Base.astro";
import { getCollection } from "astro:content";
const items = (await getCollection("experience")).sort((a,b)=> (b.data.start||'').localeCompare(a.data.start||''));
---
<Base title="Experience — Simon Bouchard">
  <h1 class="text-2xl font-bold mb-6">Experience</h1>
  <ol class="relative border-s pl-6">
    {items.map(({ data }) => (
      <li class="mb-8 ms-6">
        <span class="absolute -left-2 mt-1 inline-block size-3 rounded-full bg-emerald-500"></span>
        <div class="font-semibold">{data.role} — {data.company}</div>
        <div class="text-sm opacity-80">{data.start} — {data.end ?? "Present"} {data.location ? `· ${data.location}` : ""}</div>
        <ul class="list-disc ml-5 mt-2 text-sm opacity-90">
          {data.bullets.map(b => <li>{b}</li>)}
        </ul>
      </li>
    ))}
  </ol>
</Base>

